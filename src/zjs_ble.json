{
    "module": "ble",
    "require": "ble",
    "depends": ["events", "buffer"],
    "zephyr_conf": {
        "all": [
            "CONFIG_BLUETOOTH=y",
            "CONFIG_NBLE=y",
            "CONFIG_BLUETOOTH_SMP=y",
            "CONFIG_BLUETOOTH_PERIPHERAL=y",
            "CONFIG_BLUETOOTH_GATT_DYNAMIC_DB=y",
            "CONFIG_BLUETOOTH_MAX_CONN=4"
        ]
    },
    "zjs_config": ["-DBUILD_MODULE_BLE"],
    "src": ["zjs_ble.c"],
    "header": ["zjs_ble.h"]
}
