{
    "module": "sensor",
    "targets": ["arduino_101"],
    "depends": ["ipm"],
    "zjs_config": ["-DBUILD_MODULE_SENSOR"],
    "zephyr_conf": {
        "arc": [
            "CONFIG_SENSOR=y",
            "CONFIG_GPIO=y",
            "CONFIG_SPI=y",
            "CONFIG_SPI_0=n",
            "CONFIG_SPI_1=n",
            "CONFIG_SPI_SS_1_NAME=\"SPI_SS_1\"",
            "CONFIG_BMI160=y",
            "CONFIG_BMI160_NAME=\"bmi160\"",
            "CONFIG_BMI160_SPI_PORT_NAME=\"SPI_SS_1\"",
            "CONFIG_BMI160_SLAVE=1",
            "CONFIG_BMI160_SPI_BUS_FREQ=88",
            "CONFIG_BMI160_TRIGGER=y",
            "CONFIG_BMI160_TRIGGER_OWN_THREAD=y"
        ]
    },
    "zjs_config": ["-I$(ZJS_BASE)/src/sensors", "-DBUILD_MODULE_SENSOR"],
    "src": ["zjs_sensor.c"],
    "header": ["zjs_sensor.h"],
    "global_init": ["zjs_sensor_init"],
    "global_cleanup": ["zjs_sensor_cleanup"]
}
